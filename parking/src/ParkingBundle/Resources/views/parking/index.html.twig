{% extends 'base.html.twig' %}

{% block body %}
    <h1>Parking list</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Numberstreet</th>
                <th>Street</th>
                <th>City</th>
                <th>Postalcode</th>
                <th>Description</th>
                <th>Parkingid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for parkin in parking %}
                <tr>
                    <td><a href="{{ path('parking_show', { 'id': parkin.parkingId }) }}">{{ parkin.name }}</a></td>
                    <td>{{ parkin.numberStreet }}</td>
                    <td>{{ parkin.street }}</td>
                    <td>{{ parkin.city }}</td>
                    <td>{{ parkin.postalCode }}</td>
                    <td>{{ parkin.description }}</td>
                    <td>{{ parkin.parkingId }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('parking_show', { 'id': parkin.parkingId }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('parking_edit', { 'id': parkin.parkingId }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('parking_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
