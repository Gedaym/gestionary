{% extends 'base.html.twig' %}

{% block body %}
    <h1>Parking</h1>

    <table>
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ parking.name }}</td>
            </tr>
            <tr>
                <th>Numberstreet</th>
                <td>{{ parking.numberStreet }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ parking.street }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ parking.city }}</td>
            </tr>
            <tr>
                <th>Postalcode</th>
                <td>{{ parking.postalCode }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ parking.description }}</td>
            </tr>
            <tr>
                <th>Parkingid</th>
                <td>{{ parking.parkingId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('parking_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('parking_edit', { 'id': parking.parkingId }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
