{% extends 'base.html.twig' %}

{% block body %}
    <h1>Customer list</h1>

    <table>
        <thead>
            <tr>
                <th>Typeadhesion</th>
                <th>Immatriculation</th>
                <th>Customerid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td><a href="{{ path('customer_show', { 'id': customer.customerId }) }}">{{ customer.typeAdhesion }}</a></td>
                <td>{{ customer.immatriculation }}</td>
                <td>{{ customer.customerId }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('customer_show', { 'id': customer.customerId }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('customer_edit', { 'id': customer.customerId }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('customer_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
